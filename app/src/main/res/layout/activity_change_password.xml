<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChangePasswordActivity">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/changePassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/backArrow"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/change_passw_title" />

    <TextView
        android:id="@+id/currentPassTitle"
        android:layout_width="271dp"
        android:layout_height="25dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="5dp"
        android:text="Current Password"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePassTitle" />

    <EditText
        android:id="@+id/editTextCurrentPass"
        android:layout_width="271dp"
        android:layout_height="40dp"
        android:ems="10"
        android:maxLength="12"
        android:inputType="textPassword"
        android:outlineProvider="none"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentPassTitle" />

    <TextView
        android:id="@+id/newPassTitle"
        android:layout_width="271dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:text="New Password"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCurrentPass" />

    <EditText
        android:id="@+id/editTextNewPass"
        android:layout_width="271dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:outlineProvider="none"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPassTitle" />

    <TextView
        android:id="@+id/confirmPassTitle"
        android:layout_width="271dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:text="Confirm Password"
        android:textSize="18dp"
        android:maxLength="12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewPass" />

    <EditText
        android:id="@+id/editTextConfirmPass"
        android:layout_width="271dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:outlineProvider="none"
        android:maxLength="12"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassTitle" />

    <Button
        android:id="@+id/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:background="@drawable/save_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmPass" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>